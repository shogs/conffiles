{
  "title": "ASDZ to Ctrl/Shift/Option/Shift When Held",
  "rules": [
    {
      "description": "Map A to Ctrl when held",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "a"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_control"
            }
          ]
        }
      ]
    },
    {
      "description": "Map S to Shift when held",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "s"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_shift"
            }
          ]
        }
      ]
    },
    {
      "description": "Map D to Option when held",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "d"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_option"
            }
          ]
        }
      ]
    },
    {
      "description": "Map Z to Shift when held",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "z",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "z"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_shift"
            }
          ]
        }
      ]
    }
  ]
}
